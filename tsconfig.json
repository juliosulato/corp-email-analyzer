{
  "compilerOptions": {
    "target": "es2021",
    "module": "CommonJS",
    "moduleResolution": "node",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["*"],
    },
    "typeRoots": ["node_modules/@types", "src/@types"]
  },
  "include": ["src/**/*.ts"],
  "exclude": ["node_modules", "dist", "prisma", "*.config.ts"]
}
